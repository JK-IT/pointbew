<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_marginTop="30dp"
    android:clickable="true"
    >

   <TextView
        android:id="@+id/frag_add_title"
        android:textAlignment="center"
        android:text="@string/add_webpoint_frag_title"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:typeface="sans"
        android:textStyle="bold"
        android:background="@drawable/white_round_corner"
       android:backgroundTint="@color/title_background"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:paddingHorizontal="20dp"
       android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frag_add_NameInput"
        />
        <EditText
            android:id="@+id/frag_add_NameInput"
            android:focusable="true"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"
            android:textColor="@color/chocolate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:autofillHints="@string/autofill_hint_webName"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"
            android:hint="@string/name_of_web"
            android:textColorHint="@color/hint_color"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:inputType="text"
            android:labelFor="@+id/frag_add_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/addFrag_guideline" />

        <EditText
            android:id="@+id/frag_add_urlInput"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
            android:focusable="true"
            android:textColor="@color/chocolate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:autofillHints="@string/autofill_hint_webName"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="5dp"
            android:hint="@string/url_of_web"
            android:textColorHint="@color/hint_color"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:inputType="textUri"
            android:labelFor="@+id/frag_add_url"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addFrag_guideline" />

        <Button
            android:id="@+id/frag_addAddButton"
            android:text="Add"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_bg_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/frag_addCancelButton"
            app:layout_constraintTop_toBottomOf="@+id/frag_add_urlInput"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/frag_addCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cancel"
            android:textColor="@color/white"
            android:text="Cancle"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frag_addAddButton"
            app:layout_constraintTop_toBottomOf="@+id/frag_add_urlInput" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/addFrag_guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>