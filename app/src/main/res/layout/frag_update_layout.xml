<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:layout_gravity="center"
    android:padding="10dp"
    android:paddingVertical="20dp"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/frag_update_title"
        android:text="Edit"
        android:textAlignment="center"
        android:textSize="50sp"
        android:typeface="sans"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/miniTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frag_update_name"/>

    <EditText
        android:id="@+id/frag_update_name"
        android:inputType="textCapCharacters"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen"
        android:backgroundTint="@color/chocolate"
        android:textColor="?attr/colorPrimaryVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@+id/frag_update_title"
        app:layout_constraintBottom_toTopOf="@+id/frag_update_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/frag_update_url"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionDone"
        android:backgroundTint="@color/chocolate"
        android:textColor="?attr/colorPrimaryVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:inputType="textUri"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@+id/frag_update_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frag_update_button"
        android:clickable="true"
        android:enabled="true"
        android:text="Update"
        android:textColor="@color/white"
        android:backgroundTint="@color/common_butt_bg"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frag_update_url"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/frag_cancel_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frag_cancel_button"
        android:text="Cancel"
        android:textColor="@color/white"
        android:clickable="true"
        android:enabled="true"
        android:backgroundTint="@color/action_button_002"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frag_update_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/frag_update_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>