<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WebPocket" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ff8a80</item>
        <item name="colorPrimaryVariant">#c85a54</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffc798</item>
        <item name="colorSecondaryVariant">#ca966a</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Status bar color. -->
        <!--tools:targetApi="l"-->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <!-- set this so the view will no overlap the action bar -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/action_mode_overlay</item>

        <!-- Dialog Theme -->
        <item name="materialAlertDialogTheme">@style/KusDialogTheme</item>
        <item name="floatingActionButtonStyle">?attr/colorPrimaryVariant</item>

        <!-- font family -->
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:typeface">sans</item>
        <!--disable status bar-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--transparent navigation bar-->
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>


</resources>